@model CartItem

@{
    ViewData["Title"] = "Remove Item from Cart";
}

<h1>@ViewData["Title"]</h1>

<p>Are you sure you want to remove the following item from your cart?</p>

<table class="table">
    <thead>
        <tr>
            <th>Game</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Game.Title</td>
            <td>@Model.Price.ToString("C")</td>
        </tr>
    </tbody>
</table>

<form method="post" action="@Url.Action("RemoveFromCart", "ShoppingCart")">
    <input type="hidden" name="itemId" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Remove</button>
</form>

<a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-secondary">Cancel</a>
