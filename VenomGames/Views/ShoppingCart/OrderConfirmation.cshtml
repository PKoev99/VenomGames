@model ShoppingCart

<h1>Checkout</h1>

<h3>Your Cart</h3>
@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Game</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Game.Title</td> 
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total Price: @Model.TotalPrice.ToString("C")</h4>
}
else
{
    <p>Your cart is empty.</p>
}

<form method="post" action="@Url.Action("CompleteOrder", "ShoppingCart")">
    <button type="submit" class="btn btn-primary">Complete Checkout</button>
</form>

