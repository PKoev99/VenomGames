@model ShoppingCartOutputModel

<h2>Your Shopping Cart</h2>

@if (!Model.Items.Any())
{
    <p>Your shopping cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Title" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>@item.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price:C</td>
                    <td>@item.Total:C</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="ShoppingCart" method="post">
                            <input type="hidden" name="gameId" value="@item.GameId" />
                            <button class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total Price: @Model.TotalPrice:C</h4>

    <a href="@Url.Action("Checkout", "Order")" class="btn btn-success">Checkout</a>
}
