@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">
                <i class="fas fa-shopping-cart"></i> Cart (@(ViewBag.CartCount ?? 0))
            </a>
        </li>
        <form asp-controller="ApplicationUser" asp-action="Logout" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-link nav-link">Logout</button>
        </form>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="ApplicationUser" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="ApplicationUser" asp-action="Register">Register</a>
        </li>
}
</ul>
