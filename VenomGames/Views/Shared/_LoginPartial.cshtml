@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="ApplicationUser" asp-action="Logout">Logout</a>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link" asp-controller="ApplicationUser" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="ApplicationUser" asp-action="Register">Register</a>
        </li>
}
</ul>
