@model IEnumerable<ReviewViewModel>

@{
    ViewData["Title"] = "Reviews";
}

<h1>Reviews</h1>

<table class="table">
    <thead>
        <tr>
            <th>Game</th>
            <th>User</th>
            <th>Rating</th>
            <th>Content</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.GameTitle</td>
                <td>@review.UserName</td>
                <td>@review.Rating</td>
                <td>@review.Content</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Review</a>
