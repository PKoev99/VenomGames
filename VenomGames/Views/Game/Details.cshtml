@model GameOutputModel

<h2>Game Details</h2>

<div style="margin-bottom: 20px;">
    <label><strong>Name:</strong></label>
    <p>@Model.Title</p>
</div>

<div style="margin-bottom: 20px;">
    <label><strong>Description:</strong></label>
    <p>@Model.Description</p>
</div>

<div style="margin-bottom: 20px;">
    <label><strong>Price:</strong></label>
    <p>@Model.Price</p>
</div>

<div style="margin-bottom: 20px;">
    <label><strong>Image:</strong></label>
    <br />
    <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px;" />
</div>

<div style="margin-bottom: 20px;">
    <label><strong>Categories:</strong></label>
    @if (Model.SelectedCategoryIds != null && Model.SelectedCategoryIds.Any())
    {
        <ul>
            @foreach (var category in Model.GameCategories)
            {
                <li>@category.Category.Name</li>
            }
        </ul>
    }
    else
    {
        <p>No categories assigned to this game.</p>
    }
</div>

<a href="@Url.Action("Index", "Game")" class="btn btn-primary">Back to Games</a>
