@model GameOutputModel

<h2>Delete Game</h2>
<p>Are you sure you want to delete the game: <strong>@Model.Title</strong>?</p>

<form method="post" action="@Url.Action("DeleteConfirmed", "Game")">
    <input type="hidden" name="id" value="@Model.GameId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Game")" class="btn btn-secondary">Cancel</a>
</form>
