@model GameOutputModel

<h2>Delete Game</h2>

<p>Game ID: @Model.GameId</p> <!-- This will display the Game ID to ensure it's correct -->

<div class="alert alert-danger">
    <strong>Warning!</strong> Are you sure you want to delete the game "@Model.Title"?
</div>

<form asp-action="DeleteConfirmed" method="post">
@*     <input type="hidden" asp-for="GameId" /> *@
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete Game</button>
        <a href="@Url.Action("Index", "Game")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
