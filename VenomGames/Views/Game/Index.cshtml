@model IEnumerable<GameViewModel>

@{
    ViewData["Title"] = "Games List";
}

<h1>Games List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Categories</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Price.ToString("C")</td>
                <td>@game.Categories</td>
                <td>@game.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Game</a>