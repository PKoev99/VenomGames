@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1>@Model.WelcomeMessage</h1>
    <p>Discover amazing games and explore categories!</p>
</div>

<h2>Featured Games</h2>
<div class="row">
    @foreach (var game in Model.FeaturedGames)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" />
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                    <p class="card-text">@game.Description</p>
                    <a asp-controller="Game" asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<h2>Categories</h2>
<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                    <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="btn btn-secondary">Explore</a>
                </div>
            </div>
        </div>
    }
</div>
